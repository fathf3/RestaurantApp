@model List<ResultReceipeDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<br />
<br />
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <div class="breadcrumb bg-dark mb-30">
                <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                <a class="breadcrumb-item text-white" href="/Menu/Index">Menu</a>
                <span class="breadcrumb-item active">Yemek Tarifleri</span>
            </div>
        </div>

    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">

        <table class="table table-light table-borderless table-hover text-center mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Resim</th>
                    <th>Yemek Adı</th>
                    <th>Hazırlanma Süresi</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
               
                <tbody class="align-middle">
                    <tr>
                        <td><img src="@item.thumbnail_url" style="width:50px;height:50px;" /></td>
                        <td class="align-middle">@item.Name</td>
                        @{
                            if(item.total_time_minutes < 1)
                            {
                                <td>15 dakika</td>
                            }
                            else
                            {
                                <td class="align-middle">@item.total_time_minutes dakika</td>
                            }
                        }
                        
                        <td >
                            <a class="btn btn-lg btn-outline-warning" href="@item.original_video_url">Tarifi İzle</a>
                        </td>
                    </tr>
                </tbody>
            }

        </table>

    </div>
</div>

