@model CreateMailDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönder</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Alıcı Mail Adresi</label>
                                <input type="email" required="" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">
                            </div>
                            <div class="form-group">
                                <label for="name">Konu</label>
                                <input type="text" required="" class="form-control" asp-for="Subject" id="Subject">
                            </div>
                            <div class="form-group">
                                <label for="name">Mesaj</label>
                                <textarea class="form-control" rows="5" asp-for="Body" id="Body" required=""></textarea>
                            </div>
                           
                         
                          
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Mail Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

