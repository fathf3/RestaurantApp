@model List<ResultMenuTableDto>

@{
	ViewData["Title"] = "Masalar";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					
					<div class="card-body">
						<a href="/MenuTable/TableListByStatus" class="btn btn-outline-danger">Masa Durumları</a>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td><a href="/MenuTable/DeleteMenuTable/@item.Id" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/MenuTable/UpdateMenuTable/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/MenuTable/CreateMenuTable/" class="btn btn-outline-primary">Yeni Masa Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
