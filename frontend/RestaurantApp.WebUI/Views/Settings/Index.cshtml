
@model UserEditDto

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bilgileri Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="name">Soy Adınız</label>
                                <input type="text" class="form-control" asp-for="Surname" id="Surname">
                            </div>
                            <div class="form-group">
                                <label for="name">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="UserName" id="UserName">
                            </div>
                            <div class="form-group">
                                <label for="name">Mail Adresiniz</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="name">Yeni Şifreniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="Password">
                            </div>
                            <div class="form-group">
                                <label for="name">Şifre Onayla</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>